# ===============================================
# Variables de Entorno - FabLab Production
# Copiar a .env y cambiar los valores
# ===============================================

# ========================
# BASE DE DATOS (PostgreSQL)
# ========================
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DATABASE_SSL=false

# ========================
# STRAPI CMS
# ========================
# Generar keys con: openssl rand -base64 32
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=GENERATE_RANDOM_SALT
ADMIN_JWT_SECRET=GENERATE_RANDOM_SECRET
TRANSFER_TOKEN_SALT=GENERATE_RANDOM_SALT
JWT_SECRET=GENERATE_RANDOM_SECRET

# ========================
# NEXT.JS WEB
# ========================
NEXT_PUBLIC_STRAPI_URL=https://cms.tudominio.com
NEXT_PUBLIC_VESSEL_API_URL=https://api.tudominio.com

# NextAuth
NEXTAUTH_URL=https://app.tudominio.com
NEXTAUTH_SECRET=GENERATE_RANDOM_SECRET_32_CHARS_MIN

# ========================
# DOMINIOS (para SSL/Nginx)
# ========================
DOMAIN_CMS=cms.tudominio.com
DOMAIN_WEB=app.tudominio.com
